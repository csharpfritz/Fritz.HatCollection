@inherits LayoutComponentBase

<div class="main">

<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand">
		<img src="img/brand.png" alt="Purple Propeller Ballcap" class="d-inline-block align-middle" width="50" height="50" />
		<span>Fritz's Really Cool Hats<br/>
			<span class="text-muted">A streamer's hat collection</span> <a href="https://github.com/csharpfritz/Fritz.HatCollection">Source code on GitHub</a>
		</span>
	</a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" @bind="SearchTerm">
    <button class="btn btn-outline-success m-2 my-sm-0" @onclick:preventDefault="true" @onclick="DoSearch">Search</button>
    <button class="btn btn-outline-danger my-2 my-sm-0" @onclick:preventDefault="true" @onclick="ResetSearch">Reset</button>
  </form>
</nav>

		<div class="content px-4">
			<CascadingValue Value="this">
				@Body
			</CascadingValue>
		</div>


</div>

<footer>
	Built with .NET @($"v{Environment.Version.ToString()}") and <a href="https://blazor.net">Blazor</a> by <a href="https://twitter.com/csharpfritz">@@csharpfritz</a>
</footer>

@code {

	public string SearchTerm { get; set; } 

	public System.EventHandler<SearchArgs> OnSearch { get; set; }

	public void DoSearch() { 

		OnSearch.Invoke(null, new SearchArgs(SearchTerm));

	}

	public void ResetSearch() { 

		SearchTerm = "";
		DoSearch();

	}

}
